{% extends 'base.html.twig' %}

{% block title %}Liste des Emails{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-5">
                    <a href="javascript:void(0);" class="btn btn-danger mb-2">
                        <i class="mdi mdi-plus-circle me-2"></i> Add Products
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <div id="products-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    <div class="row">
                      
                        <div class="col-sm-6">
                            <div id="products-datatable_filter" class="dataTables_filter">
                                <label>Search:
                                    <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="products-datatable">
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-centered w-100 dt-responsive nowrap dataTable no-footer dtr-inline collapsed" id="products-datatable" aria-describedby="products-datatable_info" style="width: 100%;">
                                <thead class="table-light">
                                    <tr>
                                        <th class="all sorting_disabled dt-checkboxes-cell dt-checkboxes-select-all" style="width: 27.6px;" rowspan="1" colspan="1" data-col="0" aria-label="&amp;nbsp;">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input dt-checkboxes">
                                                <label class="form-check-label">&nbsp;</label>
                                            </div>
                                        </th>

                                        <th class="sorting" tabindex="0" aria-controls="products-datatable">Objet</th>
                                        <th class="sorting" tabindex="0" aria-controls="products-datatable">Date d'envoi</th>
                                        <th class="sorting" tabindex="0" aria-controls="products-datatable">Destinataires</th>
                                
                                        
                                        <th style="width: 85.6px" class="sorting_disabled">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="odd">
                                        <td class="dt-checkboxes-cell dtr-control">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input dt-checkboxes">
                                                <label class="form-check-label">&nbsp;</label>
                                            </div>
                                        </td>
                                       
                                        <td>Aeron Chairs</td>
                                        <td >07/07/2018</td>
                                        <td>$65.94</td>
                                      
                                   
                                <td class="table-action" >
                                    <a class="action-icon  mr-2" href="javascript:void(0);">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="javascript:void(0);" class="action-icon  mr-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="javascript:void(0);" class="action-icon">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
        
                </div>
            </div> <!-- end card-body-->
        </div>
    </div>
{% endblock %}
