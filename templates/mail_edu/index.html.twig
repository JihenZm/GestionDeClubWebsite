                                <div class="col-sm-12 col-md-6">
                                    <ul class="list-inline dl mb-0 float-left float-md-right">
                                        <li class="list-inline-item text-info mr-3">
                                            <a href="#">
                                             <a href="{{  path('add_email_edu')  }}" class="btn btn-sm btn-warning mx-2"><i class="fas fa-plus-circle"></i></a>
          
                                               
                                                <span class="ml-2 font-normal text-dark"></span>
                                            </a>
                                        </li>
                                       
                                    </ul>
                                </div>
                            </div>
                            <!-- Mail list-->
                            <div class="table-responsive">
                                <table class="table email-table no-wrap table-hover v-middle mb-0 font-14">
                                    <tbody>
                                     {% for email in emailEdus %}
                                        <!-- row -->
                                        <tr>
                                            <!-- label -->
                                            <td class="pl-3">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="cst1" />
                                                    <label class="custom-control-label" for="cst1">&nbsp;</label>
                                                </div>
                                            </td>
                                            <!-- star -->
                                            <td><i class="fa fa-star text-warning"></i></td>
                                           <td>
                                            <a class="link" href="javascript: void(0)">
                                                <span class="mb-0 text-muted">
                                                    {% for educateur in email.Educateurs %}
                                                        {{ educateur.email }}{% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                </span>
                                            </a>
                                        </td>
                                            <!-- Message -->
                                            <td>
                                                <a class="link" href="javascript: void(0)">
                                                    <span class="badge badge-pill text-dark font-medium badge-danger mr-2">{{ email.objet}}</span>
                                                   
                                                </a>
                                            </td>
                                            <td class="text-muted">{{ email.message }}</td>
                                            <td class="text-muted">{{ email.DateEnvoi}}</td>
                                            
                                            
                                            
                                            <td> <a href="{{ path('deleteEmailEdu', {'id': email.id})}}" class="btn btn-sm btn-danger mx-2"> <i class="fa fa-trash"></i></a>
                                               
