{% extends 'base.html.twig' %}
{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card bg-secondary shadow border-0">
                <div class="card-body px-lg-5 py-lg-5">
                    {{ form_start(form) }}
                    
                    <div class="form-group">
                        {{ form_label(form.Nom, null, {'label_attr': {'class': 'form-control-label'}}) }}
                        {{ form_widget(form.Nom, {'attr': {'class': 'form-control', 'placeholder': 'Your Name'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.Prenom, null, {'label_attr': {'class': 'form-control-label'}}) }}
                        {{ form_widget(form.Prenom, {'attr': {'class': 'form-control', 'placeholder': 'Your Surname'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.numLicence, null, {'label_attr': {'class': 'form-control-label'}}) }}
                        {{ form_widget(form.numLicence, {'attr': {'class': 'form-control', 'placeholder': 'License Number'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.categorie, null, {'label_attr': {'class': 'form-control-label'}}) }}
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="text-center">
                        {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary mt-4'}}) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
